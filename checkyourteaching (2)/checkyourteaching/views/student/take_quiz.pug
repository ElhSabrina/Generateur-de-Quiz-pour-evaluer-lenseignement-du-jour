//- views/student/take_quiz.pug
extends ../layout

block content
  h1= quiz.title
  p.small-text Quiz code: #{quiz.code}

  form.card(method="post" action=`/student/quiz/${quiz.code}`)
    each q in questions
      .question-block
        h3= q.text
        .options
          label
            input(type="radio" name=`q_${q.id}` value="A" required)
            |  #{q.option_a}
          label
            input(type="radio" name=`q_${q.id}` value="B")
            |  #{q.option_b}
          label
            input(type="radio" name=`q_${q.id}` value="C")
            |  #{q.option_c}
          label
            input(type="radio" name=`q_${q.id}` value="D")
            |  #{q.option_d}

    button.btn-primary(type="submit") Submit answers
