//- views/layout.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title CheckYourTeaching
    link(rel="stylesheet" href="/stylesheets/style.css")
    block head
  body
    header.app-header
      a.logo(href="/")
        span.logo-dot
        span CheckYourTeaching
      nav.navbar
        a(href="/") Home
        if currentUser
          if currentUser.role === 'teacher'
            a(href="/teacher/dashboard") Teacher dashboard
          else if currentUser.role === 'student'
            a(href="/student/dashboard") Student dashboard
          a(href="/logout") Logout
        else
          a(href="/login") Login

    main.app-main
      block content

    footer.app-footer
      - const year = new Date().getFullYear()
      span © #{year} CheckYourTeaching · APU Project 2025 by Sabrina E / Sarah Y / Gabriel D
